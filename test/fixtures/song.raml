#%RAML 0.8

title: World Music API
baseUri: http://example.api.com/{version}
version: v1
traits:
  - paged:
      queryParameters:
        pages:
          description: The number of pages to return
          type: number
/songs:
  is: [ paged ]
  get:
    queryParameters:
      genre:
        description: filter the songs by genre
  post:
    body:
      application/json:
        schema: |
          { "$schema": "http://json-schema.org/schema",
            "type": "object",
            "description": "A canonical song",
            "properties": {
              "title":  { "type": "string" },
              "artist": { "type": "string" }
            },
            "required": [ "title", "artist" ]
          }
        example: |
          { "title": "A Beautiful Day", "artist": "Mike" }

  /{songId}:
    get:
      responses:
        200:
          body:
            application/json:
              schema: |
                { "$schema": "http://json-schema.org/schema",
                  "type": "object",
                  "description": "A canonical song",
                  "properties": {
                    "title":  { "type": "string" },
                    "artist": { "type": "string" }
                  },
                  "required": [ "title", "artist" ]
                }
              example: |
                { "title": "A Beautiful Day", "artist": "Mike" }
            application/xml:
    delete:
      description: |
        This method will *delete* an **individual song**
